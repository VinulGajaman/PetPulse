<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petOwner.Successfully_Paid_Activity"
    tools:ignore="ExtraText">



    <LinearLayout
        android:id="@+id/mainLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:scrollbars="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:src="@drawable/bg004"
                            android:layout_gravity="center"/>


            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center"
                android:text="Appointment Payment Successfull"
                android:textColor="@color/red"
                android:textColorLink="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/red"
                android:padding="10dp"
                android:scrollbars="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Your Appointment No. "
                    android:textColor="@color/white"
                    android:textColorLink="@color/red"
                    android:textSize="22sp" />

                <TextView

                    android:id="@+id/numberAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="152dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="19 "
                    android:textColor="@color/white"
                    android:textColorLink="@color/red"
                    android:textSize="34sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="10dp"
                android:scrollbars="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="Date of Appointment :"
                    android:textColor="@color/red"
                    android:textColorLink="@color/red"
                    android:textSize="22sp" />

                <TextView

                    android:id="@+id/dateAppointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="20/11/2023"
                    android:textColor="@color/red"
                    android:textColorLink="@color/red"
                    android:textSize="22sp" />


                <TextView

                    android:id="@+id/timeAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="bottom|end"
                    android:text="12:04:04"
                    android:textColor="@color/red"
                    android:textColorLink="@color/red"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/backToHome"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/quicksand_bold"
                android:onClick="GoToOTP"
                android:text="Back to Home"
                android:textSize="18sp"
                app:cornerRadius="30dp"
                app:icon="@drawable/baseline_home_24" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>