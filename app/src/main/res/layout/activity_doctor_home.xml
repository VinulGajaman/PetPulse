<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vet.Doctor_Home_Activity">


    <LinearLayout
        android:id="@+id/mainLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"

            android:orientation="horizontal"
            android:padding="15dp"
            android:scrollbars="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:src="@drawable/logomenu" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/quicksand_bold"
                android:text="Dr."
                android:textColor="@color/white"
                android:textColorLink="@color/red"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/vetFullname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Ananda Desilva"
                android:textColor="@color/white"
                android:textColorLink="@color/red"
                android:textSize="24sp" />


        </LinearLayout>

    <LinearLayout
        android:id="@+id/mainLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/homedoctor" />

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:format12Hour="hh:mm a"

                android:textSize="44dp"
                android:textColor="@color/red"
                android:fontFamily="@font/graduate"

                tools:targetApi="jelly_bean_mr1" />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal">

            <TextView

                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="I am :"
                android:textColor="@color/red"
                android:textColorLink="@color/red"
                android:textSize="22sp" />

            <ToggleButton
                android:id="@+id/btnStatus"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="#FFFFFF"
                android:textOff="@string/not_available"
                android:textOn="@string/available"
                android:textSize="18sp" />

        </LinearLayout>


        <Button

            android:id="@+id/btnViewAppointments"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/paynow"
            android:fontFamily="@font/quicksand_medium"
            android:text="VIEW APPOINTMENTS"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/nav_appointment"
            app:strokeColor="@color/red" />

        <Button

            android:id="@+id/goToVet_Profile"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/paynow"
            android:fontFamily="@font/quicksand_medium"
            android:text="PROFILE SETTINGS"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/nav_profile"
            app:strokeColor="@color/red" />

        <Button

            android:id="@+id/btnChange_Location"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/paynow"
            android:fontFamily="@font/quicksand_medium"
            android:text="CHANGE LOCATION"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/location"
            app:strokeColor="@color/red" />

        <Button

            android:id="@+id/btnLogOut"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawableStart="@drawable/paynow"
            android:fontFamily="@font/quicksand_medium"
            android:text="LOG OUT"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            app:icon="@drawable/nav_logout"
            app:strokeColor="@color/red"
            android:layout_marginBottom="10dp"/>/>


    </LinearLayout>

</ScrollView>