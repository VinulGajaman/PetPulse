<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vet.Vet_All_Appointments_Activity">



    <LinearLayout
        android:id="@+id/mainLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:scrollbars="vertical">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="57dp"
                android:layout_height="52dp"
                android:background="@color/white"
                app:srcCompat="@drawable/backbtn_red" />



                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="450dp"
                            android:src="@drawable/vetappointmetns"/>










            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red" />


            <Button
                android:id="@+id/pendingAppointments"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="pending Appointments"
                android:textSize="20sp"
                app:cornerRadius="30dp"
                app:icon="@drawable/pending" />


            <Button
                android:id="@+id/attendAppointments"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Attend Appointments"
                android:textSize="20sp"
                app:cornerRadius="30dp"
                app:icon="@drawable/nav_appointment" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>