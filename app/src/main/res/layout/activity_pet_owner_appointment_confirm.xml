<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petOwner.PetOwner_AppointmentConfirm_Activity">



    <LinearLayout
        android:id="@+id/mainLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:scrollbars="vertical">





            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red" />

            <LinearLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:gravity="center"
                android:scrollbars="horizontal">


                <TextView
                    android:id="@+id/appointmentNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/red"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="APPOINTMENT CONFIRMATION"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorLink="@color/red"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/welcomeImg"
                    android:layout_width="211dp"
                    android:layout_height="204dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/bg003"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/todo" />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red" />


            <TextView
                android:id="@+id/vet_full_name"
                android:layout_width="350dp"
                android:layout_height="95dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Dr. Vinul Gajaman"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textColorLink="@color/red"
                android:textSize="23sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red" />

            <TextView
                android:id="@+id/vetSpecialist"
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Dr. Vinul Gajaman"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorLink="@color/red"
                android:textSize="20sp"
                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red" />

            <TextView
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Distance from your Location (Km) :"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textColorLink="@color/red"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="276dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textColorLink="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="!! Once the Appoinment is confirmed, no Veterinarian change allowed !!"

                android:textColor="@color/black"
                android:textColorLink="@color/red"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btnSumbitAppointment"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="CONFIRM"
                android:textSize="20sp"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>