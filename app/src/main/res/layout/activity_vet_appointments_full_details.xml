<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vet.Vet_Appointments_Full_Details_Activity">

    <ImageView
        android:id="@+id/petMianImg2"
        android:layout_width="200dp"

        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vetAppNum2"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/vetAppNum2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/red"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:text="01"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="@font/quicksand_medium"
        android:text="Note :"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pDecs2" />

    <TextView
        android:id="@+id/poName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="Vinul Gajaman"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petMianImg2" />

    <TextView
        android:id="@+id/pType2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center"
        android:text="Dermetology"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poName2" />

    <TextView
        android:id="@+id/pDecs2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksand_medium"

        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:text="MBBS, Certificate in Deremertolgy"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pType2" />

    <EditText
        android:id="@+id/vetNote2"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_bkg"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="DONE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vetNote2" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="57dp"
        android:layout_height="52dp"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/vetAppNum2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vetAppNum2"
        app:srcCompat="@drawable/back_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>