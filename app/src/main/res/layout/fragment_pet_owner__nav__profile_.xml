<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petOwner.PetOwner_Nav_Profile_Fragment">>



    <LinearLayout
        android:id="@+id/mainLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:scrollbars="vertical">




            <!--            <ImageView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:src="@drawable/fullLogo"/>-->

            <LinearLayout
                android:id="@+id/layoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"

                android:orientation="vertical"
                android:padding="10dp"
                android:scrollbars="vertical">


                <TextView
                    android:id="@+id/appointmentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="PROFILE SETTINGS"
                    android:textColor="@color/red"
                    android:textColorLink="@color/red"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/red" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/bg005" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:scrollbars="vertical">

                <EditText
                    android:id="@+id/f_name"
                    android:layout_width="328dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/edittext_bkg"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="First Name"
                    android:padding="8dp"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/l_name"
                    android:layout_width="328dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_bkg"
                    android:fontFamily="@font/quicksand_medium"
                    android:hint="Last Name"
                    android:padding="8dp"
                    android:textSize="22sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:padding="10dp"
                android:scrollbars="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/baseline_add_ic_call_24"/>

                <TextView
                    android:id="@+id/vet_mobile"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="+94 710334443"
                    android:textColor="@color/red"
                    android:textColorLink="@color/red"
                    android:textSize="24sp" />

            </LinearLayout>


            <Button
                android:id="@+id/profileUpdate"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/quicksand_medium"
                android:text="Update"

                android:textSize="22sp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>