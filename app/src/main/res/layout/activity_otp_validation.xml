<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petOwner.OTP_Validation_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainLayoutOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/mainLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:lottie_rawRes="@raw/otp2"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true">

                    </com.airbnb.lottie.LottieAnimationView>


                </LinearLayout>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:text="OTP Validation Code"
                    android:textColor="#FF2a4e"
                    android:textSize="30sp" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:text="Check your SMS and enter the OTP validation code here."
                    android:textColor="#FF2a4e"
                    android:textSize="18sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/petOwner_Otp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext_bkg"
                android:fontFamily="@font/quicksand_medium"
                android:hint="OTP Code"
                android:padding="8dp"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btn_validate_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Validate"
                android:textSize="22sp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>